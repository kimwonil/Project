<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="dao.MemberDao">
 
 <select id="selectOne" resultType="Member">
 	select * from profile where id=#{id}
 </select>
 
 <update id="refillCash" parameterType="Member">
 	update profile set balance=#{balance} where id=#{id}
 </update>
 
 <insert id="cashRecord" parameterType="Member">
	insert into cash values(0, #{id}, sysdate(), #{amount}, #{balance}, #{code}, 1)
 </insert>
 
 <select id="cashList" parameterType="String" resultType="CashRecord">
 	select * from cash where id=#{id}
 </select>
 
 </mapper>
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 